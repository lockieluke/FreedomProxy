{
  "name": "freedom-proxy",
  "packageManager": "yarn@4.5.0",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "build": "concurrently \"yarn build:server\" \"yarn build:web\" \"yarn build:runtime\"",
    "build:wrapper": "tsx build-wrapper.ts",
    "build:server": "tsx build.ts",
    "build:web": "vite build",
    "build:runtime": "tsx build-runtime.ts",
    "watch:server": "chokidar --initial --silent \"src/**/*.ts\" \"shared/**/*.ts\" -c \"tsx build.ts\"",
    "dev:server": "tsx watch src/index.ts",
    "dev:web": "vite build --watch",
    "dev:runtime": "chokidar --initial --silent \"runtime/**/*.ts\" \"shared/**/*.ts\" -c \"tsx build-runtime.ts\"",
    "dev": "concurrently --kill-others \"npm:dev:server\" \"npm:dev:web\" \"npm:dev:runtime\"",
    "clean": "rimraf dist/",
    "analyse:deps": "vite-bundle-visualizer"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@preact/preset-vite": "^2.9.1",
    "@types/blocked-at": "^1.0.4",
    "@types/dompurify": "^3.0.5",
    "@types/events": "^3.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/is-url": "^1.2.32",
    "@types/lodash-es": "^4.17.12",
    "@types/marked": "^6.0.0",
    "@types/node": "^22.7.5",
    "@types/ua-parser-js": "^0.7.39",
    "@types/uglify-js": "^3.17.5",
    "@types/valid-data-url": "^2.0.2",
    "@types/ws": "^8.5.12",
    "autoprefixer": "^10.4.20",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.0.1",
    "esbuild": "^0.24.0",
    "postcss": "^8.4.47",
    "rimraf": "^6.0.1",
    "sass": "^1.79.4",
    "tailwindcss": "^3.4.13",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "uglify-js": "^3.19.3",
    "user-agent-data-types": "^0.4.2",
    "vite": "^5.4.8",
    "vite-bundle-visualizer": "^1.2.1",
    "vite-plugin-conditional-compiler": "^0.3.1",
    "vite-plugin-minify": "^2.0.0",
    "vite-plugin-singlefile": "^2.0.2",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/websocket": "^11.0.1",
    "@tomphttp/bare-client": "^2.2.0-alpha",
    "@tomphttp/bare-server-node": "2.0.3",
    "arraybuffer-to-buffer": "^0.0.7",
    "await-to-js": "^3.0.0",
    "blocked-at": "^1.2.0",
    "browser-or-node": "^3.0.0",
    "buffer": "^6.0.3",
    "cash-dom": "^8.1.5",
    "cheerio": "^1.0.0",
    "dompurify": "^3.1.7",
    "dotenv": "^16.4.5",
    "events": "^3.3.0",
    "fastify": "^5.0.0",
    "fastify-graceful-shutdown": "^4.0.1",
    "fetch-cookie": "^3.0.1",
    "flowbite": "^2.5.2",
    "flowbite-react": "^0.10.2",
    "fs-extra": "^11.2.0",
    "import-meta-resolve": "^4.1.0",
