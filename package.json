    "process": "^0.11.10",
    "react-icons": "^5.3.0",
    "react-if": "^4.1.5",
    "react-toastify": "^10.0.5",
    "store2": "^2.14.3",
    "tidy-url": "^1.18.3",
    "ua-parser-js": "^1.0.39",
    "universal-user-agent": "^7.0.2",
    "util": "^0.12.5",
    "valid-data-url": "^5.0.0"
  },
  "resolutions": {
    "vite-plugin-conditional-compiler@^0.1.1": "patch:vite-plugin-conditional-compiler@npm%3A0.1.1#./.yarn/patches/vite-plugin-conditional-compiler-npm-0.1.1-15b4b7ca59.patch"
  }
}
